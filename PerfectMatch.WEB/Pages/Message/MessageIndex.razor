@page "/message"
@using PerfectMatch.WEB.Shared
@using PerfectMatch.WEB.Repositories;
@using PerfectMatch.Shared.Entities;
@inject NavigationManager navigationManager
@inject SweetAlertService swal

@inject IRepository repository
<h3>MessageIndex</h3>

<div class="mb-3">

    <a class="btn btn-primary" href="/message/create">  Nuevo mensaje</a>

</div>

<GenericList MyList="Messages">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Contenido</th>
                    <th>Fecha de envío</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var message in Messages!)
                {
                    <tr>
                        <td>
                            @message.Content
                        </td>
                        <td>
                            @message.ShippingDate
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/message/edit/@message.Id">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(message))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {

    public List<Message>? Messages { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Message>>("api/message");
        Messages = responseHppt.Response!;
    }

    private async Task Delete(Message Message)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/message/{Message.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }

}
