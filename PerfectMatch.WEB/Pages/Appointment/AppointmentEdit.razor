@page "/appointment/edit/{id:int}"
@using PerfectMatch.Shared.Entities;
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService swal

<h3>Editar Cita</h3>

@if (Appointment is null)
{
    <p>Cargando...</p>
}
else
{
    <AppointmentForm @ref="AppointmentForm" Appointment="Appointment" OnValidSubmit="Edit" ReturnAction="Return" />
}

@code {
    private Appointment? Appointment;
    private AppointmentForm? AppointmentForm;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHTTP = await repository.Get<Appointment>($"api/appointment/{Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("appointment");
            }
            else
            {
                var messageError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", messageError, SweetAlertIcon.Error);
            }
        }
        else
        {
            Appointment = responseHTTP.Response;
        }
    }

    private async Task Edit()
    {
        var responseHTTP = await repository.Put("api/appointment", Appointment);

        if (responseHTTP.Error)
        {
            var mensajeError = await responseHTTP.GetErrorMessage();
            await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
        }
        else
        {
            AppointmentForm!.FormPostedSuccessfully = true;
            navigationManager.NavigateTo("appointment");
        }
    }

    private void Return()
    {
        navigationManager.NavigateTo("appointment");
    }
}
