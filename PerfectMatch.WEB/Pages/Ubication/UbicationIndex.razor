@page "/ubication"
@using PerfectMatch.WEB.Shared
@using PerfectMatch.WEB.Repositories;
@using PerfectMatch.Shared.Entities;
@inject NavigationManager navigationManager
@inject SweetAlertService swal

@inject IRepository repository
<h3>UbicationIndex</h3>

<div class="mb-3">

    <a class="btn btn-primary" href="/ubication/create">  Nueva ubicación</a>

</div>

<GenericList MyList="Ubications">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre de la ubicación</th>
                    <th>Latitud</th>
                    <th>Longitud</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var ubication in Ubications!)
                {
                    <tr>
                        <td>
                            @ubication.PlaceName
                        </td>
                        <td>
                            @ubication.Latitude
                        </td>
                        <td>
                            @ubication.Length
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/ubication/edit/@ubication.Id">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(ubication))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {

    public List<Ubication>? Ubications { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Ubication>>("api/ubication");
        Ubications = responseHppt.Response!;
    }

    private async Task Delete(Ubication Ubication)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/ubication/{Ubication.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }

}
