@page "/ubication/edit/{id:int}"
@using PerfectMatch.Shared.Entities;
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService swal

<h3>Editar Ubicación</h3>

@if (Ubication is null)
{
    <p>Cargando...</p>
}
else
{
    <UbicationForm @ref="UbicationForm" Ubication="Ubication" OnValidSubmit="Edit" ReturnAction="Return" />
}

@code {
    private Ubication? Ubication;
    private UbicationForm? UbicationForm;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHTTP = await repository.Get<Ubication>($"api/ubication/{Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("ubication");
            }
            else
            {
                var messageError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", messageError, SweetAlertIcon.Error);
            }
        }
        else
        {
            Ubication = responseHTTP.Response;
        }
    }

    private async Task Edit()
    {
        var responseHTTP = await repository.Put("api/ubication", Ubication);

        if (responseHTTP.Error)
        {
            var mensajeError = await responseHTTP.GetErrorMessage();
            await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
        }
        else
        {
            UbicationForm!.FormPostedSuccessfully = true;
            navigationManager.NavigateTo("ubication");
        }
    }

    private void Return()
    {
        navigationManager.NavigateTo("ubication");
    }
}
