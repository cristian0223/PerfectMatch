@page "/notification/edit/{id:int}"
@using PerfectMatch.Shared.Entities;
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService swal

<h3>Editar Post</h3>

@if (Notification is null)
{
    <p>Cargando...</p>
}
else
{
    <NotificationForm @ref="NotificationForm" Notification="Notification" OnValidSubmit="Edit" ReturnAction="Return" />
}

@code {
    private Notification? Notification;
    private NotificationForm? NotificationForm;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHTTP = await repository.Get<Notification>($"api/notification/{Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("notification");
            }
            else
            {
                var messageError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", messageError, SweetAlertIcon.Error);
            }
        }
        else
        {
            Notification = responseHTTP.Response;
        }
    }

    private async Task Edit()
    {
        var responseHTTP = await repository.Put("api/notification", Notification);

        if (responseHTTP.Error)
        {
            var mensajeError = await responseHTTP.GetErrorMessage();
            await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
        }
        else
        {
            NotificationForm!.FormPostedSuccessfully = true;
            navigationManager.NavigateTo("notification");
        }
    }

    private void Return()
    {
        navigationManager.NavigateTo("notification");
    }
}
