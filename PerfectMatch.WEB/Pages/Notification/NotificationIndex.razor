@page "/notification"
@using PerfectMatch.WEB.Shared
@using PerfectMatch.WEB.Repositories;
@using PerfectMatch.Shared.Entities;
@inject NavigationManager navigationManager
@inject SweetAlertService swal

@inject IRepository repository
<h3>NotificationIndex</h3>

<div class="mb-3">

    <a class="btn btn-primary" href="/notification/create">  Nueva notificación</a>

</div>

<GenericList MyList="Notifications">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Descripción</th>
                    <th>Link de la información</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var notification in Notifications!)
                {
                    <tr>
                        <td>
                            @notification.Title
                        </td>
                        <td>
                            @notification.Description
                        </td>
                        <td>
                            @notification.LinkInfo
                        </td>

                        <td>
                            <a class="btn btn-warning" href="/notification/edit/@notification.Id">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(notification))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {

    public List<Notification>? Notifications { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Notification>>("api/notification");
        Notifications = responseHppt.Response!;
    }

    private async Task Delete(Notification Notification)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/notification/{Notification.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }

}
