@page "/post"
@using PerfectMatch.WEB.Shared
@using PerfectMatch.WEB.Repositories;
@using PerfectMatch.Shared.Entities;
@inject NavigationManager navigationManager
@inject SweetAlertService swal

@inject IRepository repository
<h3>PostIndex</h3>

<div class="mb-3">

    <a class="btn btn-primary" href="/post/create">  Nuevo post</a>

</div>

<GenericList MyList="Posts">

    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Fecha de publicación</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var post in Posts!)
                {
                    <tr>
                        <td>
                            @post.Title
                        </td>
                        <td>
                            @post.PublicationDate
                        </td>
                        <td>
                            <a class="btn btn-warning" href="/post/edit/@post.Id">Editar</a>
                            <button class="btn btn-danger" @onclick=@(() => Delete(post))>Borrar</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </Body>

</GenericList>

@code {

    public List<Post>? Posts { get; set; }

    protected async override Task OnInitializedAsync()
    {
        await Load();
    }

    private async Task Load()
    {
        var responseHppt = await repository.Get<List<Post>>("api/post");
        Posts = responseHppt.Response!;
    }

    private async Task Delete(Post Post)
    {
        var result = await swal.FireAsync(new SweetAlertOptions
            {
                Title = "Confirmación",
                Text = "¿Esta seguro que quieres borrar el registro?",
                Icon = SweetAlertIcon.Question,
                ShowCancelButton = true
            });

        var confirm = string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            return;
        }

        var responseHTTP = await repository.Delete($"api/post/{Post.Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("/");
            }
            else
            {
                var mensajeError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
            }
        }
        else
        {
            await Load();
        }
    }

}