@page "/post/edit/{id:int}"
@using PerfectMatch.Shared.Entities;
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService swal

<h3>Editar Post</h3>

@if (Post is null)
{
    <p>Cargando...</p>
}
else
{
    <PostForm @ref="PostForm" Post="Post" OnValidSubmit="Edit" ReturnAction="Return" />
}

@code {
    private Post? Post;
    private PostForm? PostForm;

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var responseHTTP = await repository.Get<Post>($"api/post/{Id}");

        if (responseHTTP.Error)
        {
            if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                navigationManager.NavigateTo("post");
            }
            else
            {
                var messageError = await responseHTTP.GetErrorMessage();
                await swal.FireAsync("Error", messageError, SweetAlertIcon.Error);
            }
        }
        else
        {
            Post = responseHTTP.Response;
        }
    }

    private async Task Edit()
    {
        var responseHTTP = await repository.Put("api/post", Post);

        if (responseHTTP.Error)
        {
            var mensajeError = await responseHTTP.GetErrorMessage();
            await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
        }
        else
        {
            PostForm!.FormPostedSuccessfully = true;
            navigationManager.NavigateTo("post");
        }
    }

    private void Return()
    {
        navigationManager.NavigateTo("post");
    }
}
